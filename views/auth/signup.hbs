<h2>Welcome SignUp Page</h2>

<div>

  <form action="/signup" method="POST">

    <input
      id="user-name"
      type="text"
      name="username"
      placeholder="Username"
      required
    />
    <br />
    <br />

    <input
      id="email-adres"
      type="email"
      name="email"
      placeholder="Email Adress"
      required
    />
    <br />
    <br />

    <input
      id="password"
      type="password"
      name="password"
      placeholder="Password"
      required
    />

    <br />
    <br />
    <input
      id="name"
      type="text"
      name="name"
      placeholder="Name Surname"
      required
    />

    <br />
    <br />
    <input id="address" type="text" name="address" placeholder="Address" />

    <br />
    <br />
    <input id="city" type="text" name="city" placeholder="City" />

    <br />
    <br />

    <input id="zip-code" type="text" name="zipCode" placeholder="Zip Code" />

    <br />
    <br />

    <input
      id="phone-number"
      type="text"
      name="phoneNr"
      placeholder="Phone Number"
    />

    <br />
    <br />
    <button>Submit</button>
  </form>

  <div>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </div>
</div>